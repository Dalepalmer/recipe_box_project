<h1>Your Mom's Favorite Recipes To Make Me</h1>

<h2>SELECT ONE RECIPE</h2>
<% if @recipes.any? %>
  <% @recipes.each() do |recipe| %>
  <form action="/ingredients_recipes_add" method="post">
  <div class="radio">
      <label>
          <input type="radio" id="recipe_id" name="recipe_id" value="<%= recipe.id() %>">
          <a href= "/recipes/<%= recipe.id() %>"><%= recipe.name() %></a>
      </label>
  </div>
  <% end %>

<% else %>

  No recipes in the box yet.

<% end %>

<h2>SELECT AT LEAST ONE INGREDIENT</h2>
<% if @ingredients.any? %>
      <% @ingredients.each() do |ingredient| %>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="ingredient_ids_array[]" name="ingredient_ids_array[]" value="<%= ingredient.id() %>">
                  <a href="/ingredients/<%= ingredient.id %>"><%= ingredient.ingredient_name() %></a>
            </label>
        </div>
        <% end %>
      <button type="submit" class="btn btn-primary">Add ingredients to the choosen recipe</button>
    </form>

<% else %>

  No ingredients in the pantry yet.

<% end %>

<br>

<% if @recipes.any? %>
  <% @recipes.each() do |recipe| %>
  <form action="/categories_recipes_add" method="post">
  <div class="radio">
      <label>
          <input type="radio" id="recipe_id" name="recipe_id" value="<%= recipe.id() %>">
          <a href= "/recipes/<%= recipe.id() %>"><%= recipe.name() %></a>
      </label>
  </div>
  <% end %>

<% else %>

  No recipes in the box yet.

<% end %>

<h2>SELECT AT LEAST ONE CATEGORY</h2>
<% if @categories.any? %>
      <% @categories.each() do |category| %>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="category_id" name="category_id" value="<%=category.id() %>">
                <%= category.name() %>
            </label>
        </div>
        <% end %>
      <button type="submit" class="btn btn-danger">Add categories to associate with the choosen recipe</button>
    </form>

<% else %>

  No categories listed yet.

<% end %>
